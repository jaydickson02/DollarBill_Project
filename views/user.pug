mixin cal(bills, dates)
  - var i = 0;
  ul
    for bill in bills
      li= bill + ' @ ' + dates[i]
      - i = i + 1;
      
      
      
html

  +cal(billsL, datesL)
  
  form(method="post")
    input(name='bill' required) 
    input(name='date' required) //Make non required later
    input(type='submit')
